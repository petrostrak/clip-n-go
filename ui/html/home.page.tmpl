{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latset Clips</h2>
    {{if .Clips}}
        <table>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>ID</th>
            </tr>
            {{range .Clips}}
                <tr>
                    <td><a href='clip?id={{.ID}}'>{{.Title}}</a></td>
                    <td>{{.Created}}</td>
                    <td>#{{.ID}}</td>
                </tr>
            {{end}}
        </table>
    {{else}}
        <p>There's nothing to see here... yet!</p>
    {{end}}
{{end}}

{{template "footer" .}}