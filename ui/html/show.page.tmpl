{{template "base" .}}

{{define "title"}}Clip #{{.ID}}{{end}}

{{define "main"}}
<div class="clip">
    <div class="metadata">
        <strong>{{.Title}}</strong>
        <span>#{{.ID}}</span>
    </div>
    <pre><code>{{.Content}}</code></pre>
    <div class="metadata">
        <time>Created: {{.Created}}</time>
        <time>Expires: {{.Expires}}</time>
    </div>
</div>

{{end}}